<div id="header">
    <div id="logo">
        <a href="/"><img src="images/logo.png" alt="LOGO" height="100" width="200"></a>
    </div>
    <div id="navigation">
        <ul>
        {{#each nav}}
            {{#compare ../title this.page}}
            <li class="selected">
                <a href={{this.link}}>{{this.name}}</a>
            </li>
            {{else}}
                <li>
                    <a href={{this.link}}>{{this.name}}</a>
                </li>
            {{/compare}}       
        {{/each}}
        </ul>
    </div>
</div>